<div class="container">
  <h1 class="border-bottom">My tasks</h1>
  
  <ul>
    <% @tasks.each do |task| %>
      <li>
      <div class="flex my-3">
        <% if task.completed %>
          <i class="fas fa-check-square"></i>
        <% else %>
          <i class="far fa-square"></i>
        <% end %>
        <%= link_to task.title, task_path(task) %></li>
    <% end %>
  </ul>
  <div class="border-top">
    <%= link_to "+ Add a new Task", new_path %>
  </div>
</div>

</div>
